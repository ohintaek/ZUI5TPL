<mvc:View
	controllerName="com.ui5.echoit.temp.Main"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:mvc="sap.ui.core.mvc">
<Page
	showHeader="false"
	class="sapUiContentPadding"
	width="auto"
	showNavButton="false"
	navButtonPress="onNavBack">
	<tnt:ToolPage id="ToolApp">
		<tnt:header>
			<tnt:ToolHeader>
				<Button
					id="sideNavigationToggleButton"
					icon="sap-icon://menu2"
					type="Transparent"
					press="onSideNavButtonPress"
					tooltip="small size">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<Button 
					id="btnHome" 
					icon="sap-icon://home"
					type="Transparent" 
					press="onPressHome" 
					tooltip="Home"/>
				<ToolbarSpacer/>
				<Title text="UI5 Sample Project"/>
				<ToolbarSpacer/>
			</tnt:ToolHeader>
		</tnt:header>
		
		<tnt:sideContent>
			<tnt:SideNavigation
				id="sideNav"
				expanded="true"
				itemSelect="onPressItemSelect">
				<tnt:NavigationList>
					<tnt:NavigationListItem
							expanded="false"
							text="공지사항"
							icon="sap-icon://notification-2"
							key="VWNoticeBoard">
					</tnt:NavigationListItem>
					<tnt:NavigationListItem
						expanded="false"
						text="Table Samples"
						icon="sap-icon://table-view"
						key="sapMTable">
						<tnt:items>
							<tnt:NavigationListItem
								text="sap.m.table"
								key="VWMTB"/>
							<tnt:NavigationListItem
								text="sap.ui.table"
								key="VWUITB"/>	
						</tnt:items>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<App id="mainContents"/>
		</tnt:mainContents>
	</tnt:ToolPage>
<footer>
	<Toolbar>
		<content>
			<ToolbarSpacer/>
				<Text text="COPYRIGHT (C) 2018 Echo IT, LTD. ALL RIGHTS RESERVED."/>
			<ToolbarSpacer/>
		</content>
	</Toolbar>
</footer>
</Page>
</mvc:View>
