<mvc:View
	controllerName="com.ui5.echoit.temp.noticeboards.VWNoticeBoardDetail"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:ux="sap.uxap"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc">
	
	<html:style>
	.sapMPanelContent {
	    padding : 0rem;
	    padding-top: 1rem;
	    box-sizing: border-box;
	    overflow: auto;
	    white-space: normal;
	}
	
	.sapMPanelContent:not(.sapMPanelBGTransparent) {
    	border-bottom: 0px;
	}
	</html:style>
	<Page
		title="공지사항 상세정보"
		showHeader="true"
		width="auto"
		showNavButton="true"
		navButtonPress="onNavBack">
		<content>
			<ux:ObjectPageLayout
				id="NoticeObjPageLayout"
				useIconTabBar="true"
				binding="{/notice}">
				<ux:headerTitle>
					<ux:ObjectPageHeader objectTitle="{NOTICETITLE}">
						<ux:actions>
							<ux:ObjectPageHeaderActionButton icon="sap-icon://edit" text="수정" press="onPressNoticeUpdate"/>
							<ux:ObjectPageHeaderActionButton icon="sap-icon://delete" text="삭제" press="onPressNoticeDelete"/>
						</ux:actions>
					</ux:ObjectPageHeader>
				</ux:headerTitle>
				
				<ux:sections>
					<ux:ObjectPageSection id="NoticePageSection1" title="내용">
						<ux:subSections>
							<ux:ObjectPageSubSection title = "내용">
								<ux:blocks>
									<Text text="{NOTICECONTENTS}"/>
								</ux:blocks>
							</ux:ObjectPageSubSection>
						</ux:subSections>
					</ux:ObjectPageSection>
					
					<ux:ObjectPageSection title="댓글">
						<ux:subSections>
							<ux:ObjectPageSubSection title = "댓글">
								<ux:blocks>
									<Panel>
										<FeedInput
											id="NoticeFeed"
											width="100%"
											icon="sap-icon://comment"
											buttonTooltip="댓글달기"
											post="onReplyPost"/>
										<Panel BackgroundDesign="Transparent">
											<List
												id="NoticeFeedList"
												mode="Delete"
												growing="true"
												growingThreshold="4"
												delete="onPressNoticeListDelete"
												showSeparators="Inner"
												items="{/FeedItems}">
												<FeedListItem/>
												<!-- <FeedListItem
													id="NoticeFeedListItem"
													sender="{REPLYUSERID}"
													text="{REPLYCONTENT}"
													timestamp="{REPLYCRTIME}"
													maxCharacters="100"
													iconActive="false"
													senderActive="false"
													convertLinksToAnchorTags="All"/> -->
												<!-- <FeedListItem
													id="NoticeFeedListItem"
													sender="{REPLYUSERID}"
													text="{REPLYCONTENT}"
													timestamp="{
														path : 'REPLYCRTIME',
														type: 'sap.ui.model.type.DateTime',
														formatOptions : {
															pattern: 'HH:mm:ss'
														}
													}"
													maxCharacters="100"
													iconActive="false"
													senderActive="false"
													convertLinksToAnchorTags="All">
													
														To use this, at least OpenUI5 library version 1.52 update is required.  
													<actions>
														<FeedListItemAction text="삭제" icon="sap-icon://delete" key="delete" press="onPressRepleDelete" />
													</actions> 
													
												</FeedListItem> -->
											</List>
										</Panel>
									</Panel>
								</ux:blocks>
							</ux:ObjectPageSubSection>
						</ux:subSections>
					</ux:ObjectPageSection>
					
					<ux:ObjectPageSection title="첨부파일">
						<ux:subSections>
							<ux:ObjectPageSubSection title = "첨부파일">
								<ux:blocks>
									<Text text="첨부파일 내용.."/>
								</ux:blocks>
							</ux:ObjectPageSubSection>
						</ux:subSections>
					</ux:ObjectPageSection>
				</ux:sections>
				
			</ux:ObjectPageLayout>
		</content>
	</Page>
</mvc:View>