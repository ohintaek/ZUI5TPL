<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
  <Popover
  	title="AirLine Information"
  	class="sapUiContentPadding"
  	placement="Right"
  	height="300px"
  	contentWidth="320px"
  	contentHeight="280px">
  	<content>
  		<ObjectHeader title="{CARRID}">
  			<attributes>
  				<ObjectAttribute text="{CARRNAME}"/>
  				<ObjectAttribute text="{CURRCODE}"/>
  				<ObjectAttribute text="{URL}"/>
  			</attributes>
  		</ObjectHeader>
  	</content>
  	<footer>
  		<Toolbar>
  			<ToolbarSpacer/>
  			<Button id="popoverCloseBtn" text="Close" press="onPressPopoverCloseBtn"/>
  		</Toolbar>
  	</footer>
  </Popover>
</core:FragmentDefinition>