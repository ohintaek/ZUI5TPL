<mvc:View
	controllerName="com.ui5.echoit.temp.tables.sapMTable.VWMTB"
	xmlns="sap.m"
	xmlns:ux="sap.uxap"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc">
	<html:style>
	.mTableTableHeaderToolbarLabel{
		font-size : 1.2rem;
	}
	</html:style>
	<Page
		title="sap.m.Table"
		showHeader="false"
		class="sapUiContentPadding"
		width="auto"
		showNavButton="true"
		navButtonPress="onNavBack">
		<ux:ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false">
			<ux:headerTitle>
				<ux:ObjectPageHeader objectTitle="sap.m.table"/>
			</ux:headerTitle>
			
			<ux:headerContent>
				<ObjectAttribute text="sap.m.table에 대한 데이터 바인딩 방법 중 JSON Model Binding과  SAP Gateway를 이용한 Odata Binding의 방법에 대한 Sample."/>
			</ux:headerContent>
			
			<ux:sections>
				<ux:ObjectPageSection title="">
					<ux:subSections>
						<ux:ObjectPageSubSection title="OData Model Binding">
							<ux:blocks>
								<Table
									id="mtable"
									mode="MultiSelect"
									showUnread="true"
									fixedLayout="false"
									growing="true"
									growingThreshold="10"
									noDataText="데이터가 없습니다."
									backgroundDesign="Transparent">
									<headerToolbar>
										<Toolbar>
											<Label design="Bold" text="OData Model Binding" class="mTableTableHeaderToolbarLabel"/>
											<ToolbarSpacer/>
											<SearchField id="topSearchField" liveChange="onSearchFieldLiveChangeTop" width="30%"/>
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column
											hAlign="Center">
											<Text text="Airline Code" />
										</Column>
										<Column
											hAlign="Center">
											<Text text="Flight Number" />
										</Column>
										<Column
											hAlign="Center">
											<Text text="Flight date" />
										</Column>
										<Column
											hAlign="Center">
											<Text text="Price" />
										</Column>
										<Column
											hAlign="Center">
											<Text text="Currency" />
										</Column>
										<Column
											hAlign="Center">
											<Text text="Plane Type" />
										</Column>
										<Column
											hAlign="Center">
											<Text text="Seatsmax" />
										</Column>
										<Column
											hAlign="Center">
											<Text text="Seatsocc" />
										</Column>
										<Column
											hAlign="Center">
											<Text text="PaymentSum" />
										</Column>
									</columns>
								</Table>
							</ux:blocks>
						</ux:ObjectPageSubSection>
					</ux:subSections>
				</ux:ObjectPageSection>
				
				<ux:ObjectPageSection title="">
					<ux:ObjectPageSubSection title="JSON Model Binding">
						<ux:blocks>
							<Table
								id="mtableJson"
								mode="MultiSelect"
								showUnread="true"
								fixedLayout="false"
								growing="true"
								growingThreshold="10"
								noDataText="데이터가 없습니다."
								backgroundDesign="Transparent">
								<headerToolbar>
									<Toolbar>
										<Label design="Bold" text="JSON Model Binding" class="mTableTableHeaderToolbarLabel"/>
										<ToolbarSpacer/>
										<SearchField id="bottomSearchField" liveChange="onSearchFieldLiveChangeBottom" width="30%"/>
									</Toolbar>
								</headerToolbar>
								<columns>
								<Column hAlign="Center">
									<Text text="Name" />
								</Column>
								<Column hAlign="Center">
									<Text text="ProductId" />
								</Column>
								<Column hAlign="Center">
									<Text text="LastPurchase" />
								</Column>
								<Column hAlign="Center">
									<Text text="Payment" />
								</Column>
								<Column hAlign="Center">
									<Text text="State" />
								</Column>
								<Column hAlign="Center">
									<Text text="Amount" />
								</Column>
							</columns>
						</Table>
					</ux:blocks>
				</ux:ObjectPageSubSection>
			</ux:ObjectPageSection>
		</ux:sections>
	</ux:ObjectPageLayout>
</Page>
</mvc:View>